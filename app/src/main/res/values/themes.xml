<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hotel" parent="Theme.Design.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:autofilledHighlight" tools:targetApi="o">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="SpinnerTheme" parent="Theme.Design.NoActionBar">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>

    <style name="customRatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:height">5dp</item>
        <item name="colorControlNormal">@color/light_gray</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="cardWidgetStyle" parent="@style/ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="android:textColor">@color/black</item>
<!--        <item name="colorControlNormal">@color/light_gray</item>-->
<!--        <item name="colorControlActivated">@color/yellow</item>-->
    </style>

</resources>