<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.app.LukandaH.Fragments.OtpFragment.OtpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="266dp"
                android:layout_height="266dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/img6" />
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="29dp"
                android:layout_height="22dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/arrow_back"
                app:tint="@color/black" />
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display"
            android:gravity="center"
            android:text="Code has sent to"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Phoebebuffay@gmail.com"
            android:textColor="@color/black35"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_otpBox1"
                android:layout_width="50dp"
                android:layout_height="52dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/roundcorners"
                android:textCursorDrawable="@drawable/cursordrawable"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/sf_pro_display"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:singleLine="true"
                android:textColor="@color/skyblue"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/et_otpBox2"
                android:layout_width="55dp"
                android:layout_height="52dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/roundcorners"
                android:textCursorDrawable="@drawable/cursordrawable"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/sf_pro_display"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:singleLine="true"
                android:textColor="@color/skyblue"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/et_otpBox3"
                android:layout_width="55dp"
                android:layout_height="52dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/roundcorners"
                android:textCursorDrawable="@drawable/cursordrawable"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/sf_pro_display"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:singleLine="true"
                android:textColor="@color/skyblue"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/et_otpBox4"
                android:layout_width="55dp"
                android:layout_height="52dp"
                android:background="@drawable/roundcorners"
                android:textCursorDrawable="@drawable/cursordrawable"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/sf_pro_display"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="1"
                android:singleLine="true"
                android:textColor="@color/skyblue"
                android:textSize="30dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/sf_pro_display"
            android:gravity="center"
            android:text="Havenâ€™t received the verification code?"
            android:textColor="@color/black35"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_resendOtp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:fontFamily="@font/sf_pro_display"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="Resend"
            android:textColor="@color/skyblue"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/otpSubmitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="97dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="97dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/roundcorners"
            android:backgroundTint="@color/black"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>